node {
    stage('Create File'){
       sh label: '', script: 'touch NewFile'
    }
    stage('Write'){
        sh label: '', script: 'echo “This is a message” > NewFile'
    }
    stage('Print'){
        sh label: '', script: 'cat NewFile'
    }
    stage('Completed'){
       sh label: '', script: 'echo "pipeline Job is completed" | mailx -s "pipeline Job is completed" shimon.pozin@oracle.com'
    }
}
